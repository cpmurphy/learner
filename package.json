{
  "type": "module",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.1",
    "copyfiles": "^2.4.1",
    "jsdom": "^25.0.1",
    "vitest": "^3.1.1"
  },
  "scripts": {
    "test": "vitest",
    "test_once": "vitest run",
    "coverage": "vitest run --coverage",
    "copy-assets": "copyfiles -u 3 \"node_modules/cm-chessboard/assets/**/*.{css,css.map,svg}\" public/3rdparty-assets/cm-chessboard",
    "copy-cm-chessboard-js": "copyfiles -u 3 \"node_modules/cm-chessboard/src/**/*.js\" public/scripts/3rdparty/cm-chessboard",
    "copy-chessjs": "copyfiles \"node_modules/chess.js/dist/esm/chess.js\" public/scripts/3rdparty/chess.js",
    "copy-all": "npm run copy-assets && npm run copy-cm-chessboard-js && npm run copy-chessjs",
    "prebuild": "npm run copy-all",
    "prestart": "npm run copy-all"
  },
  "dependencies": {
    "chess.js": "^1.0.0-beta.8",
    "cm-chessboard": "^8.7.4"
  }
}
